extends ../partials/_layout.pug

block content
    div.root.row.container
        div.navigation.col-lg-3
            div.container-header
                i.fi-xnsuxx-twitter.text-primary
            div.container-content
                // Navigation
                div.main-nav
                    div.navi-item.active
                        div.icon
                            i.fi-xnsuxx-house-solid
                        div.title
                            h5.font-weight-bold Home
                    div.navi-item
                        div.icon
                            i.fi-xnsuxx-hashtag
                        div.title
                            h5.font-weight-bold Explore
                    div.navi-item
                        div.icon
                            i.fi-xnsuxx-bell
                        div.title
                            h5.font-weight-bold Notification
                    div.navi-item
                        div.icon
                            i.fi-xnsuxx-envelope
                        div.title
                            h5.font-weight-bold Messages
                    div.navi-item
                        div.icon
                            i.fi-xnsuxx-bookmark
                        div.title
                            h5.font-weight-bold Bookmarks
                    div.navi-item
                        div.icon
                            i.fi-snluxx-three-bars-wide
                        div.title
                            h5.font-weight-bold Lists
                    div.navi-item
                        div.icon
                            i.fi-xnsuxx-user
                        div.title
                            h5.font-weight-bold Profile
                    div.navi-item
                        div.icon
                            i.fi-cnluxx-ellipsis
                        div.title
                            h5.font-weight-bold More
                button.btn.btn-primary.tweet-btn Tweet
        div.timeline.col-lg-6
            div.container-header
                h5.font-weight-bold Home
            div.container-content
                div.makeTweetCard
                    div.card-content.row
                        div.profile-img.col-sm-1
                            img(src="https://pbs.twimg.com/profile_images/1240631385703903234/Va4hZ8np_400x400.jpg", alt="Profile")
                        div.tweet.col-lg
                            textarea.form-control(name="tweet", placeholder="What's happening?", maxlength="140")
                    div.cardd-footer
                        button.btn.btn-primary.font-weight-bold.ml-auto Tweet
                div.tweets
                    div.tweet-card.row
                        div.pfp.col-lg-1
                            img(src="https://pbs.twimg.com/profile_images/1240631385703903234/Va4hZ8np_400x400.jpg", alt="Profile")
                        div.tweet-info.col-lg
                            div.tweet-header
                                p.font-weight-bold jabo 
                                    span.username.font-weight-normal @jabowastaken - 5min
                            div.tweet-content
                                p Halos isang araw nahanap ko na rin HAHAHAHAHAHA
                            div.tweet-footer
                                form.row
                                    button(type="submit").col
                                        i.fi-xnsuxx-comment
                                    button(type="submit").col
                                        i.fi-xnsuxx-undo-wide
                                    button(type="submit").col
                                        i.fi-xnsuxx-heart
                    div.tweet-card.row
                        div.pfp.col-lg-1
                            img(src="https://pbs.twimg.com/profile_images/1240631385703903234/Va4hZ8np_400x400.jpg", alt="Profile")
                        div.tweet-info.col-lg
                            div.tweet-header
                                p.font-weight-bold jabo 
                                    span.username.font-weight-normal @jabowastaken - 5min
                            div.tweet-content
                                p Wtf??
                            div.tweet-footer
                                form.row
                                    button(type="submit").col
                                        i.fi-xnsuxx-comment
                                    button(type="submit").col
                                        i.fi-xnsuxx-undo-wide
                                    button(type="submit").col
                                        i.fi-xnsuxx-heart
        div.others.col-lg-3
            div.container-header
                form.search
                    div.input-group
                        div.input-group-prepend
                            i.fi-xtsuhl-search
                        input(type="text", name="query")
